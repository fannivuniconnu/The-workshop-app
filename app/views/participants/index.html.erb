<h1>Rails Girls Berlin at Campus Party Europe</h1>

<%= gmaps("markers" => { "data" => @pins }, "map_options" => { "center_longitude" => 13.24, "center_latitude" => 52.31, "zoom" => 7 }) %>
<%= yield :scripts %>

<table>
  <tr>
    <th class='first'></th>
    <th>Name</th>
    <th>Twitter handle</th>
    <th>Hometown</th>
  </tr>

<% @participants.each do |participant| %>
  <tr>
    <td class="first"><%= image_tag(participant.picture.thumb.url) unless participant.picture.thumb.blank? %></td>
    <td><%= link_to(participant.name, participant) %></td>
    <td><%= link_to(participant.twitter_handle, "http://twitter.com/#{participant.twitter_handle}", :target => '_blank') if participant.twitter_handle %></td>
    <td><%= participant.address %></td>
  </tr>
<% end %>
</table>

<br />

<br />
<%= link_to 'New Participant', new_participant_path %>